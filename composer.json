{
    "name": "folklore/bazar",
    "description": "Laravel 4 package to add buyable capabilities to any eloquent models.",
    "authors": [
        {
            "name": "Folklore",
            "email": "info@atelierfolklore.ca"
        },
        {
            "name": "David Mongeau-Petitpas",
            "email": "dmp@atelierfolklore.ca"
        }
    ],

    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "4.2.*",
        "cartalyst/cart": "1.0.*",
        "omnipay/common": "~2.0",
        "omnipay/paypal": "~2.0",
        "omnipay/stripe": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "dev-master"
    },

    "autoload": {
        "classmap": [
            "src/migrations"
        ],
        "psr-0": {
            "Folklore\\Bazar\\": "src/"
        }
    },

    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.cartalyst.com"
        }
    ],

    "minimum-stability": "stable"
}
